<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navBar.ejs') %>
            <div class="container">
                <div class="card mt-4 p-2">
                    <h1 class=" text-center card-header">
                        <%= pergunta.titulo %>
                    </h1>

                    <h1 class="text-center">
                        <%= pergunta.descricao %>
                    </h1>
                    <hr>
                    <form action="/responder" method="post">
                        <label class="mb-4 resposta_label">Resposta:</label>
                        <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
                        <input type="hidden" name="pergunta" class="btn btn-primary" value="<%= pergunta.id %>">
                        <button type="submit" class="btn btn-primary btn-stile mt-4" id="question">Responder</button>
                    </form>
                </div>

                <% respostas.forEach((resposta)=>{%>
                    <div class="card mt-4 resposta_card">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo%>
                            </p>
                        </div>
                    </div>
                            <%})%>
            </div>
    </body>
    <%- include('partials/footer.ejs') %>