<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<div class="container">
    <hr>

    <h2 class="darking">Categoria</h2>
    <a href="/admin/categories/new" class="btn btn-success">criar nova categoria</a>
    <hr>
    <table class="table table-bordered  table-striped table-hover ">
        <thead class="text-info bg-dark">
            <tr class="border-info border-top-0 border-end-0 border-start-0 border-2 ">
                <th class="text-center">Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
            <tr>
                <th class="text-info text-center bg-dark"><%= category.id %></th>
                <th><%= category.title %></th>
                <th><%= category.slug %></th>
                <th>
                    <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning ms-2"> <i class="fas fa-edit"></i></a>
                  <form action="/categories/delete" method="post" class="d-inline" onsubmit="confirmarDelecao(event,this)">
                    <input  type="hidden" name="id"  value="<%= category.id %>">
                      <button class="btn btn-danger ms-3" style="background:red"> <i class="fas fa-trash-alt"></i></i></button>
                    </form>

                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer') %>

<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        let decision = confirm("Voce quer deletar esta categoria ? ")
        if(decision){
            form.submit();
        }
    }
</script>
