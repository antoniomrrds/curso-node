<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project socket.IO</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <h1>socket.Io</h1>

    <input type="text" name="" id="word" oninput="submit()">
    <p id="resp"></p>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.0/socket.io.js"></script>
<script>
    const  socket = io("http://localhost:3000");
    socket.on("disconnect" ,_=>{
        console.log("Desconetado !!!")
    })
    socket.emit("boasVindas",{nome:"Antonio Marcos"})
    socket.on("result",(data)=>{
            const p = document.getElementById("resp").innerHTML = data
        })

    const submit = _ =>{
        const word_input  = document.getElementById("word")
        socket.emit("word",word_input.value)
        
    }
</script>
</html>