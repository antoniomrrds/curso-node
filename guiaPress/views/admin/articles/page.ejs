<%- include('../../partials/header') %>
    <%- include('../../partials/homeNavbar') %>

        <body>

            <div class="container">


                <div class="text-center">

                    <% result.articles.rows.forEach(article=> {%>
                        <div class="card mb-3 mt-5 border border-primary">
                            <div class="card-header bg-dark text-primary border border-primary">
                                <h2>
                                    <%=article.title %>
                                </h2>
                            </div>
                            <div class="card-body">

                                <a href="/<%= article.slug %>" class="btn btn-lg btn-primary">Ler Artigo</a>
                            </div>
                        </div>

                        <%})%>

                </div>

                <nav aria-label="...">
                    <ul class="pagination justify-content-center">
                        <% if(result.page>1){%>
                        <li class="page-item ">
                            <span class="page-link"><a href="/articles/page/<%=result.page -1 %>">Previous</a></span>
                        </li>
                        <%}%>
                            <% result.pages.forEach(a=> {%>
                            <% if(result.next){%>
                                <li class="page-item "><a  class="page-link mx-2 " name="value"
                                        href="/articles/page/<%=a %>"><%= a%></a></li>
                                <%}%>
                                    <%})%>
                                    <% if(result.next){%>
                                        <li class="page-item  ">
                                            <span class="page-link"><a href="/articles/page/<%=result.page +1 %>">Next</a></span>
                                        </li>
                                        <%}%>
                    </ul>
                </nav>
                </nav>


            </div>


        </body>
        <%- include('../../partials/footer') %>

     